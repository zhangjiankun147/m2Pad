<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <RelativeLayout
      android:layout_width="350dp"
      android:layout_height="300dp"
      android:orientation="vertical">
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="fitXY"
          android:src="@drawable/dialog_update_bg"/>
      <TextView
          android:id="@+id/title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="8dp"
          android:textSize="20dp"
          android:textColor="#fcfcfc"
          android:text="发现新版本..."/>
      <TextView
          android:id="@+id/uploadTitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:layout_marginTop="70dp"
          android:textSize="18dp"
          android:layout_below="@id/title"
          android:textColor="#000000"
          android:text="新版本：1.1.1"/>
      <TextView
          android:id="@+id/uploadDetail"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:textSize="18dp"
          android:maxLines="4"
          android:layout_below="@id/uploadTitle"
          android:textColor="#000000"
          android:text="更新内容：\n1、修复bug \n2、优化用户体验 \n3、新增某某功能"/>
      <LinearLayout
          android:id="@+id/ll_action"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_alignParentBottom="true"
          android:orientation="horizontal"
          android:visibility="visible">
          <TextView
              android:id="@+id/force_update"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:textSize="18dp"
              android:textColor="#6EAE3E"
              android:gravity="center"
              android:visibility="gone"
              android:text="立即更新"/>
          <TextView
              android:id="@+id/cancel_update"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:textSize="18dp"
              android:textColor="#6EAE3E"
              android:gravity="center"
              android:text="暂不更新"/>
          <TextView
              android:id="@+id/baseLine2"
              android:layout_width="0.5dp"
              android:layout_height="match_parent"
              android:background="#000000"/>
          <TextView
              android:id="@+id/start_update"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:textSize="18dp"
              android:textColor="#6EAE3E"
              android:gravity="center"
              android:text="立即更新"/>
      </LinearLayout>
      <TextView
          android:id="@+id/baseLine"
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:layout_marginTop="10dp"
          android:visibility="visible"
          android:layout_above="@id/ll_action"
          android:background="#000000"/>

      <LinearLayout
          android:id="@+id/ll_download"
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:layout_alignParentBottom="true"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:orientation="horizontal"
          android:visibility="gone">
          <dev.romdev.com.m2pad.FlikerProgressBar
              android:id="@+id/round_progressbar"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:textSize="18dp"
              app:loadingColor="#40c4ff"
              app:stopColor="#ff9800"
              app:radius="20dp"/>
      </LinearLayout>

  </RelativeLayout>
</LinearLayout>